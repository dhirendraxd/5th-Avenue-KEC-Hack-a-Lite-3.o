rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    match /equipment/{equipmentId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    match /businessProfiles/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    match /rentals/{rentalId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.renterId == request.auth.uid;
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid || resource.data.renterId == request.auth.uid);
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}